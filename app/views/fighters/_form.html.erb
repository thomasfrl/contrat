<%= form_with(model: fighter, local: true) do |form| %>
  <% if fighter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fighter.errors.count, "error") %> prohibited this fighter from being saved:</h2>

      <ul>
      <% fighter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field pb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>

  <div class="field pb-3">
    <%= form.label :life %>
    <%= form.number_field :life, class: 'form-control' %>
  </div>

  <div class="field pb-3">
    <%= form.label :attack %>
    <%= form.number_field :attack, class: 'form-control' %>
  </div>

  <div class="field pb-3">
    <%= form.label :xp %>
    <%= form.number_field :xp, class: 'form-control' %>
  </div>

  <div class="field pb-3">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>

  <div class="actions row justify-content-between p-3">
    <%= form.submit "Save", class: "btn btn-sm btn-primary" %>
    <%= link_to 'Back', fighters_path, class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
