<h1>Fighters</h1>
<div class="row">
  <div class="col-lg-3 col-sm-6 col-sm-6 mb-5">
    <%= link_to new_fighter_path do  %>
      <div class="card card-fighter no-border shadow shadow--hover">
        <div class="card-img-top text-center p-2">
          <%= image_tag "fighter/default.png", alt: 'fighter', height: 208%>
        </div>
        <div class="card-body pt-0 text-center">
          <h5 class="card-title"> New fighter</h5>               
        </div>
        <div class="card-footer text-muted text-center">
          Create a new fighter
        </div>
      </div>
    <% end %>
  </div>

  <%@fighters.each do |fighter|%>
    <%= render "fighters/card", fighter: fighter %>
  <%end%>
</div>

<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Life</th>
      <th>Attack</th>
      <th>Xp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fighters.each do |fighter| %>
      <tr>
        <td><%= fighter.name %></td>
        <td><%= fighter.life %></td>
        <td><%= fighter.attack %></td>
        <td><%= fighter.xp %></td>
        <td><%= link_to 'Show', fighter %></td>
        <td><%= link_to 'Edit', edit_fighter_path(fighter) %></td>
        <td><%= link_to 'Destroy', fighter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fighter', new_fighter_path %>
